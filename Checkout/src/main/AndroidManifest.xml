<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SET_TIME" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.C196"
        tools:targetApi="31">
        <activity
            android:name=".ui.courses.coursesOptions"
            android:exported="false" />
        <activity
            android:name=".ui.terms.termsOptions"
            android:exported="false" />
        <activity
            android:name=".ui.assessments.assessmentOptions"
            android:exported="false" />
        <activity
            android:name=".ui.assessments.addAssessmentsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.assessments.detailedAssessment"
            android:exported="false" />
        <activity
            android:name=".ui.courses.detailedCourse"
            android:exported="false" />
        <activity
            android:name=".ui.courses.addCoursesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.terms.detailedTerm"
            android:exported="false" />
        <activity
            android:name=".ui.terms.addTermsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.terms.termsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.assessments.assessmentsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.courses.coursesActivity"
            android:exported="false" />

        <receiver
            android:name=".ui.AlarmReceiver"
            android:exported="true"
            android:enabled="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.C196.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>